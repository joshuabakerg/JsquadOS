

function runnable()
	local result = {}
	
	result.destroyed = false
	result.engine = nil
	
	
	function result.initialize(self,engine)
		self.engine = engine
	end
	
	function result.destroy(self,env)
		self.destroyed = true
	end
	
	function result.update(self)
	
	end
	
	function result.render(self,renderer)
	
	end
	return result
end

function clicker()
	local result = runnable()
	
	result.mainForm = josuiu.newForm("test",0,0,51,19,colors.blue,colors.gray)
	result.mainForm:addUI(josuiu.newButton("sName",function(self) self.color = colors.blue end,2,2,6,3,colors.red))
	result.mainForm:addUI(josuiu.newInput("text",2,6,12,1,colors.pink))
	result.x = 1
	result.y = 1
	result.image = paintutils.loadImage("/home/joshua/Pictures/wallpaper.pnt")
	function result.update(self,event)
		self.mainForm:update(event)
	end
	
	function result.render(self,renderer)
		--renderer:drawImage(self.image,0,0)
		self.mainForm:render(renderer)
	end
	
	return result
end