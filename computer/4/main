rednet.open("left")
function runCommand(args)
	shell.run(args)
end

function basicProg()
	while true do
		rednet.open("left")
		print("before receive")
		senderID,program,lol = rednet.receive()
		print("after receive")
		if program == "exit" then
  			break
		end
		runCommand(program)
	end
end

function advncProg()
	while true do
		sender,prog,lol = rednet.receive()
		if prog == "exit" then
			break
		end
		file = fs.open("temp","w")
		file.write(prog)
		file.close()
		shell.run("temp")
		fs.delete("temp")	
	end
end

advncProg()